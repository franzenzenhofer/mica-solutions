{
  "name": "@mica/platform",
  "version": "1.0.0",
  "description": "MICA Solutions Platform - AI-powered tools for Music Austria",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:praxiswissen": "cd services/praxiswissen-search && npm run dev",
    "dev:database-sync": "cd services/database-sync && npm run dev",
    "dev:event-parser": "cd services/event-parser && npm run dev",
    "build": "npm-run-all build:shared build:services",
    "build:shared": "cd shared && npm run build",
    "build:services": "npm-run-all --parallel build:service:*",
    "build:service:praxiswissen": "cd services/praxiswissen-search && npm run build",
    "build:service:database-sync": "cd services/database-sync && npm run build",
    "build:service:event-parser": "cd services/event-parser && npm run build",
    "test": "npm-run-all test:*",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint . --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "deploy:staging": "npm run build && ./scripts/deploy.sh staging",
    "deploy:production": "npm run build && ./scripts/deploy.sh production"
  },
  "workspaces": [
    "shared",
    "services/*"
  ],
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0",
    "@playwright/test": "^1.45.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franzenzenhofer/mica-solutions.git"
  },
  "author": "Franz Enzenhofer",
  "license": "MIT"
}